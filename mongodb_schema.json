{
  "collections": [
    { "name": "raw_videos" },
    { "name": "cleaned_transcripts" },
    { "name": "enriched_transcripts" },
    { "name": "multimodal_segments" },
    { "name": "video_chunks" },
    { "name": "memory_logs" },
    { "name": "saved_queries" },
    { "name": "summaries" }
  ],
  "vectorIndex": {
    "collection": "video_chunks",
    "name": "embedding_index",
    "definition": {
      "mappings": {
        "dynamic": true,
        "fields": {
          "embedding": {
            "type": "knnVector",
            "dimensions": 1024,
            "similarity": "cosine"
          },
          "metadata.tags": { "type": "string" },
          "metadata.channel_id": { "type": "string" },
          "metadata.published_at": { "type": "date" }
        }
      }
    }
  }
}
